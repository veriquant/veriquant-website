---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const pricing = [
  {
    name: "Early Access",
    price: "Free",
    popular: true,
    features: [
      "Access to prototype demonstrations",
      "Research collaboration opportunities",
      "Early feedback program participation",
      "Development updates and progress reports",
      "Community access for beta testing",
      "Input on feature prioritization",
    ],
    button: {
      text: "Join Waitlist",
      link: "/survey",
    },
  },
  {
    name: "Development Partner",
    price: "Contact Us",
    popular: false,
    features: [
      "Collaborative development opportunity",
      "Custom research project consultation",
      "Early access to working prototypes",
      "Direct feedback and feature requests",
      "Co-development discussions",
      "Academic partnership opportunities",
    ],
    button: {
      text: "Partner With Us",
      link: "/contact",
    },
  },
  {
    name: "Future Product",
    price: "TBD",
    popular: false,
    features: [
      "Production-ready formal verification",
      "Quantitative model validation",
      "Regulatory compliance support",
      "Enterprise integration capabilities",
      "Professional support services",
      "Pricing based on market validation",
    ],
    button: {
      text: "Stay Updated",
      link: "/contact",
    },
  },
];
---

<Layout title="Early Access & Development">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Development Roadmap & Early Access</Fragment>
      <Fragment slot="desc">
        VeriQuant is actively developing formal verification technology for quantitative finance. Join our community to participate in the development process and get early access to our research and prototypes.
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
