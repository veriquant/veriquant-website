---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
---

<Layout title="Investors - VeriQuant Pitch Deck">
  <style>
    .slide {
      width: 100%;
      min-height: 100vh;
      display: none;
      padding: 60px 20px;
      justify-content: flex-start;
      align-items: flex-start;
      flex-direction: column;
      overflow-y: auto;
      box-sizing: border-box;
      background: #1a1a1a;
      color: #ffffff;
    }

    .slide.active {
      display: flex;
    }

    .slide.center-slide {
      justify-content: center;
      align-items: center;
    }

    .slide h1 {
      font-size: 4rem;
      font-weight: 700;
      color: #00d4ff;
      margin-bottom: 40px;
      text-align: center;
    }

    .slide h2 {
      font-size: 3rem;
      font-weight: 600;
      color: #00d4ff;
      margin-bottom: 50px;
      text-align: center;
    }

    .slide h3 {
      font-size: 2rem;
      font-weight: 500;
      color: #ff6b35;
      margin-bottom: 30px;
    }

    .slide p, .slide li {
      font-size: 1.5rem;
      line-height: 1.6;
      margin-bottom: 20px;
      max-width: 1000px;
    }

    .subtitle {
      font-size: 1.8rem;
      color: #cccccc;
      margin-bottom: 60px;
      text-align: center;
    }

    .big-number {
      font-size: 5rem;
      font-weight: 700;
      color: #00d4ff;
      margin-bottom: 20px;
    }

    .key-point {
      background: #ff6b35;
      color: #1a1a1a;
      padding: 30px;
      border-radius: 10px;
      font-size: 1.8rem;
      font-weight: 600;
      margin: 40px 0;
      text-align: center;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      width: 100%;
      max-width: 1200px;
    }

    .card {
      background: #2a2a2a;
      padding: 40px;
      border-radius: 15px;
      border-left: 5px solid #00d4ff;
    }

    .problem-card {
      background: #2a2a2a;
      padding: 40px;
      border-radius: 15px;
      border-left: 5px solid #ff6b35;
    }

    .slide ul {
      padding-left: 30px;
    }

    .slide li {
      margin-bottom: 15px;
    }

    .navigation {
      position: fixed;
      bottom: 40px;
      right: 40px;
      display: flex;
      gap: 20px;
      z-index: 100;
    }

    .nav-btn {
      background: #00d4ff;
      color: #1a1a1a;
      border: none;
      padding: 15px 30px;
      border-radius: 30px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .nav-btn:hover {
      background: #0099cc;
      transform: translateY(-2px);
    }

    .nav-btn:disabled {
      opacity: 0.3;
      cursor: not-allowed;
      transform: none;
    }

    .slide-counter {
      position: fixed;
      top: 120px;
      right: 40px;
      background: #2a2a2a;
      padding: 15px 25px;
      border-radius: 25px;
      font-size: 1.2rem;
      font-weight: 600;
      z-index: 100;
    }

    .table {
      width: 100%;
      border-collapse: collapse;
      margin: 40px 0;
      background: #2a2a2a;
      border-radius: 15px;
      overflow: hidden;
    }

    .table th,
    .table td {
      padding: 20px;
      text-align: left;
      border-bottom: 1px solid #3a3a3a;
    }

    .table th {
      background: #00d4ff;
      color: #1a1a1a;
      font-weight: 600;
    }

    .demo-link {
      display: inline-block;
      background: #ff6b35;
      color: #1a1a1a;
      padding: 20px 40px;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1.3rem;
      margin: 30px 0;
      transition: all 0.3s ease;
    }

    .demo-link:hover {
      background: #e55a2b;
      transform: translateY(-2px);
    }

    .center {
      text-align: center;
    }

    .left {
      text-align: left;
    }

    @media (max-width: 768px) {
      .grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }
      
      .slide h1 {
        font-size: 2.5rem;
      }
      
      .slide h2 {
        font-size: 2rem;
      }
      
      .slide h3 {
        font-size: 1.5rem;
      }
      
